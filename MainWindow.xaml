<Window x:Class="NowPlaying.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NowPlaying"
        mc:Ignorable="d"
        Title="Now Playing" Height="110" Width="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="149*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="NowPlayingText" TextWrapping="NoWrap" MouseDown="TextBlock_MouseDown" Loaded="TextBlock_Loaded" Text="Now Playing" Margin="10,10,10,21" Grid.ColumnSpan="2" TextAlignment="Left"/>
        <Label Content="https://github.com/SubatomicYak/Now-Playing" MouseDown="Branding_MouseDown" Grid.ColumnSpan="2" FontSize="8" Foreground="#FFA6A6A6" Cursor="Hand" Height="21" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="185"/>
    </Grid>
</Window>
